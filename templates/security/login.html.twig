{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}
{% block stylesheets %}
{{ parent() }}
 <link rel="stylesheet"  href="{{ asset('css/login/login.css') }}" >
{% endblock %}

{% block body %}
<div class="body" style=" height:100vh; background-cover:center; width:100%;">
 <img src="{{ asset('bg_univer.jpeg') }}" style="position:absolute; height:100%; bottom:0; top:0; right:0; left:0; width:100%;">
 
 <div style="width:30%; position:relative; height:100vh; background: #051e30;"> 

         <img src="{{ asset('logoW.png') }}"  alt="Porto Admin" class="logo">
         
         <div class="login-page">
             <div class="authentification" style="color:white;"> Authentification </div>
             <div class="form">
                <form method="post" class="login-form">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
                    <label for="inputEmail">Nom d'utilisateur</label>
                    <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required placeholder="Nom d'utilisateur">
                    {# <label for="inputPassword">Password</label> #}
                    <input type="password" name="password" id="inputPassword" class="form-control password" required placeholder="mot de passe">

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn connexion" type="submit">
                        connexion
                    </button>
                    {# <p class="message">Bienvenue!</p> #}
                </form>
 
 </div>


   
  </div>
</div>
</div>
{% endblock %}
